<%- include('./auth_partials/header', { title: 'Login' }) %>

<h2>Login</h2>
<form action="/login" method="POST" class="my-4">
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control my-2" name="email" required>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control my-2" name="password" required>
    </div>
    <button type="submit" class="btn btn-primary my-3">Login</button>
</form>
<p class="mt-3">Don't have an account? <a href="/">Signup here</a></p>


<%- include('./auth_partials/footer') %>
