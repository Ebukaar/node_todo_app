<%- include("./partials/header.ejs") %>

    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">My Todo App</a>
            <div class="ml-auto">
                <a href="/logout">Logout</a>
            </div>
        </div>
    </nav>



    <div class="container mt-5">
        <form action="/add/todo" method="POST" class="d-flex">
            <input type="text" name="todo" class="form-control" placeholder="Enter Todo">
            <input type="submit" value="Add Todo" class="btn btn-md btn-primary mx-2">
        </form>


        <ul class="list-group my-5">
            <% todos.forEach(todo=> { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="todo-content">
                        <%= todo.todo %>
                    </span>
                    <input type="text" class="form-control edit-input" value="<%= todo.todo %>" style="display: none;">
                    <div>
                        <a class="btn btn-warning btn-sm mx-2 edit-btn">Edit</a>
                        <a href="/delete/todo/<%= todo._id %>" class="btn btn-danger btn-sm delete-btn">Delete</a>
                        <a href="#" class="btn btn-primary btn-sm mx-2 save-btn" data-id="<%= todo._id %>"
                            style="display: none;">Save</a>
                    </div>
                </li>
                <% }) %>
        </ul>
    </div>

    <%- include("./partials/footer.ejs") %>