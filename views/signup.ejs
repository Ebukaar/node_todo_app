<%- include('./auth_partials/header.ejs', {title: 'Signup' }) %>

    <h2>Signup</h2>
    <form action="/signup" method="POST" class="my-4">
        <div class="form-group">
            <label> Username </label>
            <input type="text" class="form-control my-2" name="username" required>
        </div>
        <div class="form-group">
            <label> Email </label>
            <input type="email" class="form-control my-2" name="email" required>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control my-2" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary my-3">Signup</button>
    </form>
    <p class="mt-3">Already have an account? <a href="/login">Login here</a></p>

    <%- include('./auth_partials/footer.ejs') %>